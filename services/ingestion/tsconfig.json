{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node", "jest"],
    "lib": ["ES2022"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist"]
}
