{
  "$schema": "https://schema.mcp.dev/mcp-servers.json",
  "version": "1.0.0",
  "servers": [
    {
      "id": "permit-compliance",
      "description": "Authoritative permit validation server bridging to DLD/Trakheesi and compliance ledger.",
      "entrypoint": "http://localhost:4000",
      "capabilities": ["permits.validate", "permits.cacheStatus"],
      "observability": {
        "otelCollector": "http://localhost:4318",
        "logStream": "logs/permit-service.jsonl"
      }
    },
    {
      "id": "listing-writer",
      "description": "FastAPI bridge for bilingual listing copy generation with compliance gates.",
      "entrypoint": "http://localhost:8001",
      "capabilities": ["listing.generateDraft", "listing.moderate"],
      "observability": {
        "otelCollector": "http://localhost:4318",
        "logStream": "logs/listing-writer.jsonl"
      }
    }
  ],
  "contextLogging": {
    "mode": "append-only",
    "path": "logs/context-log.ndjson",
    "rotation": {
      "maxSizeMB": 5,
      "maxFiles": 10
    }
  }
}
