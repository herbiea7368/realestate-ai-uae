{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://realestate-ai-uae.dev/schemas/listing-writer-request.schema.json",
  "title": "ListingWriterRequest",
  "type": "object",
  "required": ["property_id", "inputs"],
  "properties": {
    "property_id": {
      "type": "string",
      "description": "Internal property identifier."
    },
    "inputs": {
      "type": "object",
      "required": ["trakheesi_number", "language"],
      "properties": {
        "trakheesi_number": {
          "type": "string",
          "pattern": "^[0-9]{6}$",
          "description": "Permit validated by the compliance service."
        },
        "language": {
          "type": "string",
          "enum": ["en", "ar"],
          "description": "Language for generated copy."
        },
        "property_snapshot": {
          "type": "object",
          "description": "Minimal property facts used for content generation.",
          "properties": {
            "title": { "type": "string" },
            "community": { "type": "string" },
            "developer": { "type": "string" },
            "beds": { "type": "integer", "minimum": 0 },
            "baths": { "type": "integer", "minimum": 0 },
            "area_sqft": { "type": "number", "minimum": 0 },
            "price_aed": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
