{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://realestate-ai-uae.dev/schemas/permit-status-response.schema.json",
  "title": "PermitStatusResponse",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["valid", "expired", "not_found", "suspended"],
      "description": "Current validation status."
    },
    "issuer": {
      "type": "string",
      "default": "DLD",
      "description": "Permit issuing authority."
    },
    "expiry_date": {
      "type": "string",
      "format": "date",
      "description": "Permit expiry date in ISO format."
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Detailed validation failures."
    },
    "checked_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the permit was validated."
    }
  },
  "additionalProperties": false
}
